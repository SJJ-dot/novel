<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/bookCover"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        fresco:failureImage="@drawable/ic_laokuoteng"
        fresco:progressBarImage="@drawable/ic_wait" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="124dp"
        android:orientation="vertical">

        <sjj.novel.view.AutofitTextView
            android:id="@+id/bookName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/colorText"
            android:textSize="20sp"
            fresco:layout_constraintBottom_toTopOf="@+id/author"
            fresco:layout_constraintTop_toTopOf="parent"
            tools:text="标题" />

        <sjj.novel.view.AutofitTextView
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/colorTextLight"
            android:textSize="16sp"
            fresco:layout_constraintBottom_toTopOf="@+id/lastChapter"
            fresco:layout_constraintStart_toStartOf="@+id/bookName"
            fresco:layout_constraintTop_toBottomOf="@+id/bookName"
            tools:text="标题" />

        <sjj.novel.view.AutofitTextView
            android:id="@+id/lastChapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/colorTextLight"
            android:textSize="16sp"
            fresco:layout_constraintBottom_toTopOf="@+id/originWebsite"
            fresco:layout_constraintStart_toStartOf="@+id/author"
            fresco:layout_constraintTop_toBottomOf="@+id/author"
            tools:text="标题" />

        <sjj.novel.view.AutofitTextView
            android:id="@+id/originWebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/colorTextLight"
            android:textSize="16sp"
            fresco:layout_constraintBottom_toBottomOf="parent"
            fresco:layout_constraintStart_toStartOf="@+id/lastChapter"
            fresco:layout_constraintTop_toBottomOf="@+id/lastChapter"
            tools:text="标题" />


        <sjj.novel.view.BadgeView
            android:id="@+id/bv_unread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_margin="16dp"
            tools:text="99"
            fresco:layout_constraintEnd_toEndOf="parent"
            fresco:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlHardcoded" />

        <com.victor.loading.rotate.RotateLoading
            android:id="@+id/rl_loading"
            android:layout_width="26dp"
            android:layout_height="26dp"
            fresco:layout_constraintTop_toTopOf="parent"
            fresco:layout_constraintRight_toRightOf="parent"
            android:layout_margin="16dp"
            android:visibility="invisible"
            app:loading_color="@color/colorPrimary"
            app:loading_width="2dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>